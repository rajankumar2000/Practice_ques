#include <bits/stdc++.h>
#define ll long long int
using namespace std;

int main() {
	// your code goes here
	ll t;
	cin>>t;
	while(t--){
	    ll n;
	    cin>>n;
	    string s;
	    cin>>s;
	    ll ans=0;
	    for(ll i=0;i<n;i++){
	        if(s[i]=='1')ans++;
	    }
	ll res = (ans*(ans+1))/2;
	cout<<res<<endl;
	}
	return 0;
}
